# ============================================
# Example environment variables for backend
# Copy this file to .env and fill in values
# ============================================

# Express server port
PORT=5000

# MongoDB Atlas connection string
# Replace <username>, <password>, <cluster>, <db>
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<db>?retryWrites=true&w=majority

# JWT secret key (must be long & random in production)
JWT_SECRET=super_secret_change_me

# JWT token expiry duration
JWT_EXPIRES_IN=1d

# Frontend URL (comma separated if multiple allowed)
CLIENT_URL=http://localhost:5173
